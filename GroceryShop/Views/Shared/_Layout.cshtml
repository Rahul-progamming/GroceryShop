        /* Loader style */
        .loader {
            position: fixed;
            z-index: 9999;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            transition: opacity 0.3s;
            opacity: 1;
        }

            /* Loader hide when content loaded */
            .loader.fade-out {
                opacity: 0;
                pointer-events: none;
            }

        /* Video container */
        .video-container {
            width: 100%;
            height: 100%;
            overflow: hidden;
        }

            /* Video */
            .video-container video {
                min-width: 100%;
                min-height: 100%;
                width: auto;
                height: auto;
                position: absolute;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
            }
    </style>

